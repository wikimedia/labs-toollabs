# Test suite for toollabs.

# Initialize autotest.
AT_INIT()
AT_COLOR_TESTS()

# _AT_TOOLLABS_JSUB(ARGS,
#                   JSUBRC,
#                   OUTPUT,
#                   ERROR,
#                   STATUS,
#                   EXPARGS,
#                   EXPINPUT,
#                   EXPOUTPUT,
#                   EXPERROR,
#                   EXPSTATUS)
# ----------------------------------
# Check if jsub called with ARGS and a mocked-up ~/.jsubrc with the
# content JSUBRC calls a qsub mock-up with EXPARGS and EXPINPUT and
# upon receiving OUTPUT, ERROR and STATUS from the latter produces
# EXPOUTPUT, EXPERROR and EXPSTATUS respectively.
m4_define([_AT_TOOLLABS_JSUB],
[AT_DATA([jsubrc], [$2])
AT_DATA([dummy.out], [$3])
AT_DATA([dummy.err], [$4])
AT_DATA([dummy.exitcode], [$5
])
AT_DATA([dummy.args], [])
AT_DATA([dummy.in], [])
AT_CHECK([JOBUTILS_JSUBRC=jsubrc JOBUTILS_QSUB=dummy.sh jsub $1], [$10], [$8], [$9])
AT_CHECK_UNQUOTED([cat dummy.args], [0], [$6], [])
AT_CHECK([cat dummy.in], [0], [$7], [])
])

# AT_TOOLLABS_JSUB(TEST-GROUP-NAME,
#                  ARGS,
#                  OUTPUT,
#                  ERROR,
#                  STATUS,
#                  EXPARGS,
#                  EXPINPUT,
#                  EXPOUTPUT,
#                  EXPERROR,
#                  EXPSTATUS)
# ---------------------------------
# Test if jsub called with ARGS calls a qsub mock-up with EXPARGS and
# EXPINPUT and upon receiving OUTPUT, ERROR and STATUS from the latter
# produces EXPOUTPUT, EXPERROR and EXPSTATUS respectively.  Use
# TEST-GROUP-NAME for identification.
m4_define([AT_TOOLLABS_JSUB],
[AT_SETUP([$1])
_AT_TOOLLABS_JSUB([$2], [], [$3], [$4], [$5], [$6], [$7], [$8], [$9], [$10])
AT_CLEANUP()
])

# Test jsub.

# We use mainly env for tests, as jsub determines the path to the
# script internally and we can predict with a great certainty that
# env will be in /usr/bin/env.

# These tests will create two files (env.err and env.out) in the
# home directory of the calling user.
AT_TOOLLABS_JSUB([Normal call], [env], [Your job 501377 ("env") has been submitted
], [], [0], [-j no -e $HOME/env.err -o $HOME/env.out -M ${LOGNAME:-$USER}@tools.wmflabs.org -N env -hard -l h_vmem=524288k -l release=stretch -q task -b yes /usr/bin/env
], [], [Your job 501377 ("env") has been submitted
], [], [0])
AT_TOOLLABS_JSUB([Quiet call], [-quiet env], [Your job 501377 ("env") has been submitted
], [], [0], [-j no -e $HOME/env.err -o $HOME/env.out -M ${LOGNAME:-$USER}@tools.wmflabs.org -N env -hard -l h_vmem=524288k -l release=stretch -q task -b yes /usr/bin/env
], [], [], [], [0])

# Test that umasks are handled properly.
AT_SETUP([-o points to a non-existing file])
_AT_TOOLLABS_JSUB([-o does-not-exist.log -quiet env], [], [Your job 501377 ("env") has been submitted
], [], [0], [-j no -e $HOME/env.err -o does-not-exist.log -M ${LOGNAME:-$USER}@tools.wmflabs.org -N env -hard -l h_vmem=524288k -l release=stretch -q task -b yes /usr/bin/env
], [], [], [], [0])
AT_CHECK([stat -c %a does-not-exist.log], [0], [600
], [])
AT_CLEANUP()

AT_SETUP([-o points to a existing file])
